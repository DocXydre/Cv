{# templates/archive-formation.twig #}
{% extends 'base.twig' %}

{% block content %}
<div class="container-fluid">
  
  <div class="row row--equal-height">
    {% for formation in formations %}
      <div class="col-16">
        <div class="bento-card">
          <div class="bento-card__header">
            <h2>{{ formation.title }}</h2>
          </div>
          <div class="card-list__item">
            <div class="card-list__item-subtitle">
              {% if formation.meta('institution') %}
                <span class="institution">{{ formation.meta('institution') }}</span>
              {% endif %}
            </div>
            <div class="card-list__item-date">
              {% if formation.meta('date_start') %}
                {{ formation.meta('date_start')|date('Y') }}
                {% if formation.meta('date_end') %}
                  - {{ formation.meta('date_end')|date('Y') }}
                {% else %}
                  - Actuellement
                {% endif %}
              {% endif %}
            </div>
            <div class="card-list__item-description">
              {% if formation.content %}
                {{ formation.content|striptags|slice(0, 450) }}{% if formation.content|striptags|length > 450 %}...{% endif %}
              {% endif %}
            </div>
            <a href="{{ formation.link }}" class="discover-more discover-more__dark">DÃ©couvrir plus</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% endblock %}
