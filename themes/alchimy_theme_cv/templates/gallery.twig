{# gallery.twig #}

{% extends 'base.twig' %}

{% block content %}
  <div class="gallery">
    {% if photos %}
      {% for photo in photos %}
        <img src="{{ photo.url }}" alt="{{ photo.alt }}" />
        {% if photo.caption %}
          <p>{{ photo.caption }}</p>
        {% endif %}
      {% endfor %}
    {% else %}
      <p>Aucune photo disponible.</p>
    {% endif %}
  </div>
{% endblock %}

